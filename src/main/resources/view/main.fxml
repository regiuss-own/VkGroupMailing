<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<StackPane id="root" fx:id="rootPane" prefHeight="600.0" prefWidth="800.0" stylesheets="@../style/main.css" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <VBox alignment="CENTER" spacing="10.0" StackPane.alignment="CENTER">
         <children>
            <HBox fx:id="settingsPane" maxWidth="1000.0" spacing="10.0" VBox.vgrow="ALWAYS">
               <children>
                  <VBox prefHeight="200.0" prefWidth="100.0" spacing="10.0" HBox.hgrow="ALWAYS">
                     <children>
                        <Label alignment="CENTER" contentDisplay="CENTER" maxWidth="1.7976931348623157E308" text="Настройки">
                           <font>
                              <Font size="20.0" />
                           </font>
                        </Label>
                        <VBox spacing="5.0">
                           <children>
                              <Label text="Токен доступа">
                                 <font>
                                    <Font size="16.0" />
                                 </font>
                              </Label>
                              <TextField fx:id="tokenField">
                                 <font>
                                    <Font size="16.0" />
                                 </font>
                              </TextField>
                              <HBox alignment="CENTER" spacing="5.0">
                                 <children>
                                    <Label text="Состояние:">
                                       <font>
                                          <Font size="16.0" />
                                       </font>
                                    </Label>
                                    <Label fx:id="tokenStatus" maxWidth="1.7976931348623157E308" text="Неизвестно" HBox.hgrow="ALWAYS">
                                       <font>
                                          <Font size="16.0" />
                                       </font>
                                    </Label>
                                    <Button mnemonicParsing="false" onAction="#onCheckToken" text="Проверить">
                                       <font>
                                          <Font size="14.0" />
                                       </font>
                                    </Button>
                                    <Button mnemonicParsing="false" onAction="#onAuth" text="Авторизация">
                                       <font>
                                          <Font size="14.0" />
                                       </font>
                                    </Button>
                                 </children>
                              </HBox>
                           </children>
                        </VBox>
                        <VBox>
                           <children>
                              <Label text="Задержка между диалогами">
                                 <font>
                                    <Font size="16.0" />
                                 </font>
                              </Label>
                              <HBox alignment="CENTER_LEFT" spacing="5.0">
                                 <children>
                                    <TextField fx:id="dialogDelayField" text="0">
                                       <font>
                                          <Font size="16.0" />
                                       </font>
                                    </TextField>
                                    <Text strokeType="OUTSIDE" strokeWidth="0.0" text="сек.">
                                       <font>
                                          <Font size="16.0" />
                                       </font>
                                    </Text>
                                 </children>
                              </HBox>
                           </children>
                        </VBox>
                        <VBox>
                           <children>
                              <Label text="Задержка между сообщениями">
                                 <font>
                                    <Font size="16.0" />
                                 </font>
                              </Label>
                              <HBox alignment="CENTER_LEFT" spacing="5.0">
                                 <children>
                                    <TextField fx:id="messageDelayField" text="0">
                                       <font>
                                          <Font size="16.0" />
                                       </font>
                                    </TextField>
                                    <Text strokeType="OUTSIDE" strokeWidth="0.0" text="сек.">
                                       <font>
                                          <Font size="16.0" />
                                       </font>
                                    </Text>
                                 </children>
                              </HBox>
                           </children>
                        </VBox>
                        <VBox layoutX="10.0" layoutY="230.0">
                           <children>
                              <HBox alignment="CENTER_LEFT" spacing="5.0">
                                 <children>
                                    <ToggleButton mnemonicParsing="false" prefWidth="160.0" text="Поиск">
                                       <font>
                                          <Font size="16.0" />
                                       </font>
                                       <toggleGroup>
                                          <ToggleGroup fx:id="taskTypeGroup" />
                                       </toggleGroup>
                                    </ToggleButton>
                                    <ToggleButton layoutX="10.0" layoutY="10.0" mnemonicParsing="false" prefWidth="160.0" text="Избранное" toggleGroup="$taskTypeGroup">
                                       <font>
                                          <Font size="16.0" />
                                       </font>
                                    </ToggleButton>
                                 </children>
                              </HBox>
                           </children>
                        </VBox>
                        <VBox fx:id="groupTaskBox" managed="false" spacing="10.0" visible="false">
                           <children>
                              <VBox>
                                 <children>
                                    <Label text="Минимальное количество подписчиков">
                                       <font>
                                          <Font size="16.0" />
                                       </font>
                                    </Label>
                                    <TextField fx:id="minSubCountField" text="0">
                                       <font>
                                          <Font size="16.0" />
                                       </font>
                                    </TextField>
                                 </children>
                              </VBox>
                              <VBox>
                                 <children>
                                    <Label text="Максимальное количество подписчиков">
                                       <font>
                                          <Font size="16.0" />
                                       </font>
                                    </Label>
                                    <TextField fx:id="maxSubCountField" text="0">
                                       <font>
                                          <Font size="16.0" />
                                       </font>
                                    </TextField>
                                 </children>
                              </VBox>
                              <VBox>
                                 <children>
                                    <Label text="Строка поиска">
                                       <font>
                                          <Font size="16.0" />
                                       </font>
                                    </Label>
                                    <TextField fx:id="searchField">
                                       <font>
                                          <Font size="16.0" />
                                       </font>
                                    </TextField>
                                 </children>
                              </VBox>
                              <CheckBox fx:id="sortCheckBox" mnemonicParsing="false" text="Сортировать по количеству подписчиков">
                                 <font>
                                    <Font size="16.0" />
                                 </font>
                              </CheckBox>
                           </children>
                        </VBox>
                        <VBox fx:id="bookmarkTaskBox" layoutX="10.0" layoutY="345.0" managed="false" spacing="10.0" visible="false">
                           <children>
                              <VBox>
                                 <children>
                                    <Label text="Тип">
                                       <font>
                                          <Font size="16.0" />
                                       </font>
                                    </Label>
                                    <ComboBox fx:id="bookmarkType" maxWidth="1.7976931348623157E308" />
                                 </children>
                              </VBox>
                           </children>
                        </VBox>
                     </children>
                  </VBox>
                  <VBox alignment="TOP_CENTER" maxWidth="400.0" spacing="10.0" HBox.hgrow="ALWAYS">
                     <children>
                        <Label alignment="CENTER" contentDisplay="CENTER" maxWidth="1.7976931348623157E308" text="Список сообщений">
                           <font>
                              <Font size="20.0" />
                           </font>
                        </Label>
                        <HBox alignment="CENTER" spacing="5.0">
                           <children>
                              <Button mnemonicParsing="false" onAction="#onAddMessage" text="Добавить">
                                 <font>
                                    <Font size="14.0" />
                                 </font>
                              </Button>
                              <Button layoutX="10.0" layoutY="10.0" mnemonicParsing="false" onAction="#onDeleteMessage" text="Удалить">
                                 <font>
                                    <Font size="14.0" />
                                 </font>
                              </Button>
                              <Button layoutX="90.0" layoutY="10.0" mnemonicParsing="false" onAction="#onEditMessage" text="Изменить">
                                 <font>
                                    <Font size="14.0" />
                                 </font>
                              </Button>
                           </children>
                        </HBox>
                        <ListView fx:id="messagesList" VBox.vgrow="ALWAYS" />
                     </children>
                  </VBox>
               </children>
            </HBox>
            <Button minWidth="120.0" mnemonicParsing="false" onAction="#onStart" text="Старт">
               <font>
                  <Font size="18.0" />
               </font>
            </Button>
            <HBox spacing="10.0">
               <children>
                  <Label fx:id="runStatus" layoutX="192.0" layoutY="10.0" text="Состояние: Не запущено">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </children>
</StackPane>
